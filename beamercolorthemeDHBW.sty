\mode<presentation>

% Native Colors
\definecolor{dhbw-gray}{HTML}{5c6971}
\definecolor{dhbw-gray-75}{HTML}{818f98}
\definecolor{dhbw-gray-50}{HTML}{abb4ba}
\definecolor{dhbw-gray-25}{HTML}{d5dadd}
\definecolor{dhbw-gray-dark}{HTML}{2e3438}
\definecolor{dhbw-gray-light}{HTML}{f1f3f4}
\definecolor{dhbw-red}{HTML}{e2001a}
\definecolor{dhbw-mix}{HTML}{8b0011}

% Additional Colors
\definecolor{dhbw-blue}{HTML}{0b2be3}
\definecolor{dhbw-green}{HTML}{009621}
\definecolor{dhbw-red-dark}{HTML}{8b0011}
\definecolor{dhbw-green-dark}{HTML}{309926}

% Text
\setbeamercolor{normal text}{fg=black}
\setbeamercolor{alerted text}{fg=dhbw-red}
\setbeamercolor{example text}{fg=dhbw-gray}

% Blocks
\setbeamercolor{block title}{fg=dhbw-gray-dark,bg=dhbw-gray-light}
\setbeamercolor{block body}{fg=dhbw-gray-dark,bg=dhbw-gray-light}
\setbeamercolor{block title example}{fg=white,bg=dhbw-green-dark}
\setbeamercolor{block body example}{fg=white,bg=dhbw-green-dark}
\setbeamercolor{block title alerted}{fg=white,bg=dhbw-red-dark}
\setbeamercolor{block body alerted}{fg=white,bg=dhbw-red-dark}

% Structures
\setbeamercolor{structure}{fg=black}
\setbeamercolor{section in toc}{fg=black}
\setbeamercolor{section in head/foot}{fg=white}
\setbeamertemplate{section in toc shaded}[default][100]
\setbeamertemplate{section in head/foot shaded}[default][100]
\setbeamertemplate{section in toc shaded}{\color{dhbw-gray-50}\usebeamertemplate{section in toc}}
\setbeamertemplate{section in head/foot shaded}{\color{dhbw-gray-25}\usebeamertemplate{section in head/foot}}

% Titles
\setbeamercolor{title header}{fg=black,bg=white}
\setbeamercolor{title footer}{fg=black,bg=white}

% Head/Foot
\setbeamercolor{headline}{fg=white,bg=dhbw-gray}
\setbeamercolor{footline}{fg=white,bg=dhbw-gray}

\mode<all>